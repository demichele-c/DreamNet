{{!-- homepage.handlebars --}}

<!DOCTYPE html>
<html>
<head>
    <!-- Page title -->
    <title>Home</title>
</head>
<body>
    <!-- Main heading of the page -->
    <h1>Welcome to DreamNet</h1>
    
    <!-- Navigation menu -->
    <nav>
        {{#if isAuthenticated}}
            <!-- If the user is authenticated, show a link to the dashboard -->
            <a href="/dashboard">Dashboard</a>
        {{else}}
            <!-- If the user is not authenticated, show a link to login or signup -->
            <a href="/login">Login/Signup</a>
        {{/if}}
    </nav>
</body>
</html>
