<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <!-- Link to CSS file for profile-specific styling -->
  <link rel="stylesheet" href="/css/profile.css">
  <!-- Link to general CSS file for common styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="profile-nav">
    <ul>
      <!-- Button to navigate to the Dashboard -->
      <li><button id="dashboard-btn">Dashboard</button></li>
      <!-- Button to log out of the account -->
      <li><button id="logout">Logout</button></li>
    </ul>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <!-- Welcome message displaying the user's name -->
    <h2 class="title">Welcome, {{name}} to DreamNet!</h2>
  </div>

  <!-- JavaScript file for handling profile interactions -->
  <script src="/js/profile.js"></script>
</body>
</html>
